<%# app/views/resources/_resource.html.erb %>

<div id="<%= dom_id resource %>">
  <h3 class="card-title mb-3"><%= resource.title %></h3>

  <p class="card-text">
    <strong>Tác giả:</strong> <%= resource.author %>
  </p>

  <p class="card-text">
    <strong>Thể loại:</strong> <%= resource.category %>
  </p>

  <p class="card-text">
    <strong>Trạng thái:</strong>
    <span class="badge <%= resource.status == 'available' ? 'bg-success' : 'bg-secondary' %>">
      <%= resource.status.capitalize %>
    </span>
  </p>
</div>
